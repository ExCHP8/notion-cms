{
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "ESNext",
    "emitDeclarationOnly": true,
    "declaration": true,
    "outDir": ".tmp",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
